<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:background="@drawable/zidonghuoqu10"
    android:id="@+id/root_rl"
    android:layout_height="match_parent">

    <TextView
        android:textSize="50px"
        android:text="WELCOME"
        android:id="@+id/ddd1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4px"
        android:textColor="@color/colorBar_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/ddd1"
        android:layout_marginTop="4px"
        android:id="@+id/fff1"
        android:background="@color/colorBar_bg2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@+id/fff1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="260px"
                android:id="@+id/touxiang"
                android:elevation="8px"
                android:layout_marginLeft="80px"
                android:layout_marginStart="80px"
                android:scaleType="fitXY"
                android:layout_height="300px" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@+id/touxiang"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="60px"
                android:layout_marginLeft="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="50px"
                    android:textColor="@color/colorBar_bg"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/zhiwei"
                    android:textSize="40px"
                    android:layout_marginTop="2px"
                    android:textColor="@color/colorBar_bg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="40px"
                    android:layout_marginTop="10px"
                    android:textColor="@color/colorBar_bg2"
                    android:id="@+id/huanyinyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>





</RelativeLayout>