        <!--android:layout_above="@+id/recyclerView2"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"/>-->


    <!--&lt;!&ndash;弹窗&ndash;&gt;-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_below="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/root_layout"
        android:gravity="center"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <include
        android:layout_below="@+id/recyclerView2"
        android:id="@+id/dibuview"
        layout="@layout/bibuviews"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:layout_below="@+id/recyclerView2"
        android:id="@+id/yanhuitu"
        android:visibility="gone"
        layout="@layout/yanhuitu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:layout_width="120px"
        android:id="@+id/dddk"
        android:background="@color/img_full_opaque"
        android:layout_height="120px" />



    <TextView
        android:background="@drawable/zidonghuoqu8"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:visibility="gone"
        android:text="网络已断开连接,请检查网络"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_height="wrap_content" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/wangluo"
        android:visibility="visible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px"
        android:layout_width="80px"
        android:layout_height="80px"
        app:lottie_fileName="wf.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

