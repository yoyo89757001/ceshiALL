<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clipChildren="false"
    android:layout_height="match_parent">


    <ImageView
        android:background="@drawable/dabg2"
        android:layout_width="match_parent"
        android:id="@+id/dabg"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="160px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="46px"
            android:textColor="@color/write"
            android:text="博鳌·21世纪房地产论坛第18届年会"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="19px"
            android:layout_marginTop="2px"
            android:textColor="@color/write"
            android:text="THE 18TH ANNUAL CONFERENCE OF BOAO 21ST CENTURY REAL ESTATE FORUM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="36px"
            android:layout_marginTop="8px"
            android:textColor="@color/write"
            android:text="潮  平  风  正  :  美  好  住  居  新  航  海"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.hanks.htextview.rainbow.RainbowTextView
            android:text="到场人数:"
            android:textSize="70px"
            android:gravity="right"
            android:layout_marginRight="20px"
            android:layout_marginEnd="20px"
            android:textColor="@color/colorBar_bg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:colorSpace="50dp"
            app:colorSpeed="2dp"/>

        <com.robinhood.ticker.TickerView
            android:textSize="80px"
            android:gravity="center"
            android:background="@drawable/shuzi_bg"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginStart="20px"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <!--<android.support.v7.widget.RecyclerView-->
