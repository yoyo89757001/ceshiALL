<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:background="@drawable/zidonghuoqu10"
    android:id="@+id/root_rl"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="300px"
        android:id="@+id/touxiang"
        android:elevation="8px"
        android:padding="20px"
        android:background="@drawable/touxiang_bg"
        android:layout_marginTop="80px"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_height="300px" />

    <TextView
        android:textSize="60px"
        android:text="WELCOME"
        android:id="@+id/ddd1"
        android:layout_below="@+id/touxiang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:textColor="@color/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_below="@+id/ddd1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <TextView
                    android:textSize="50px"
                    android:textColor="@color/write"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/zhiwei"
                    android:textSize="40px"
                    android:layout_marginTop="2px"
                    android:textColor="@color/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="40px"
                    android:layout_marginTop="10px"
                    android:textColor="@color/write"
                    android:id="@+id/huanyinyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


        </LinearLayout>





</RelativeLayout>