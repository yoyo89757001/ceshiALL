<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/m1_1"
        android:id="@+id/root_rl"
        android:layout_width="wrap_content"
        android:layout_height="400px">



    <ImageView
        android:layout_width="180px"
        android:id="@+id/touxiang"
        android:layout_marginLeft="40px"
        android:layout_marginStart="40px"
        android:scaleType="fitXY"
        android:layout_marginTop="70px"
        android:layout_height="220px" />

    <TextView
        android:id="@+id/zhiwei"
        android:textSize="46px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60px"
        android:layout_marginTop="50px"
        android:textColor="@color/write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/zhiwei"
        android:layout_toRightOf="@+id/touxiang"
        android:gravity="center"
        android:layout_marginTop="70px"
        android:layout_marginRight="160px"
        android:layout_marginLeft="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="46px"
            android:textColor="@color/colorBar_bg"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="36px"
            android:layout_marginTop="6px"
            android:textColor="@color/colorBar_bg2"
            android:id="@+id/huanyinyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </RelativeLayout>


</LinearLayout>